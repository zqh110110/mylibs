    </style>

    <style name="App.Preference.TextAppearance.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="App.Preference.TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text_light</item>
    </style>

    <style name="Theme.NoTitleBar" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.HalfTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.FullTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/full_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.SlideTop" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/Animation.SlideTop</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.ZoomLight" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/Animation.ZoomLight</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.ZoomLight.Fullscreen" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/Animation.ZoomLight</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Preference" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:textAppearanceLarge">@style/App.Preference.TextAppearance.Large</item>
        <item name="android:textAppearanceSmall">@style/App.Preference.TextAppearance.Small</item>
        <item name="android:windowAnimationStyle">@style/Animation.ZoomLight</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="footbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">@dimen/space_1</item>
        <item name="android:paddingBottom">@dimen/space_3</item>
    </style>

    <style name="user_center_footbar" parent="footbar">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:gravity">left|center</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="main_footbar_cutline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_head_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textColor">@color/head_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="user_face_image">
        <item name="android:layout_width">40.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="main_tab_but_linear">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
    </style>
    
    <!-- textview两个基本设置 -->
