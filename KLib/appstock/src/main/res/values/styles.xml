        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:textColor">@color/gray_white</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>
 
    
    
    <!-- 用户注册 style -->   
