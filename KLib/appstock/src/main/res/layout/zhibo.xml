<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:background="#b12a31"
        android:orientation="horizontal"
        android:padding="5dp"
        android:text="视频直播" >

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="36dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="6dp"
            android:src="@drawable/icon_back"
            android:visibility="gone" >
        </ImageView>

        <TextView
            android:id="@+id/close_tv"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/back_iv"
            android:gravity="center"
            android:lines="1"
            android:text="关闭"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:visibility="gone" >
        </TextView>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="KFD直播室"
            android:textColor="@android:color/white"
            android:textSize="16dp" >
        </TextView>

        <ImageView
            android:id="@+id/opermore_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/lmall_refresh_new" >
        </ImageView>

        <ImageView
            android:id="@+id/moreimageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/opermore_iv"
            android:src="@drawable/moreicon"
            android:visibility="gone" />
    </RelativeLayout>

    <WebView
        android:id="@+id/details_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_rl"
        android:layout_below="@+id/title_rl" />

    <RelativeLayout
        android:id="@+id/bottom_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:visibility="gone" >

        <TextView
            android:id="@+id/cancel_web_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:lines="1"
            android:text="取消"
            android:textColor="@android:color/black"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_above="@+id/bottom_cancel"
        android:layout_centerHorizontal="true"
        android:background="#223333"
        android:visibility="gone" >

        <View
            android:id="@+id/v_v"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/webpage_forward_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dip"
            android:layout_toLeftOf="@+id/v_v"
            android:background="#223333" >
        </ImageView>

        <ImageView
            android:id="@+id/webpage_back_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dip"
            android:layout_toLeftOf="@+id/webpage_forward_iv"
            android:background="#223333" >
        </ImageView>

        <ImageView
            android:id="@+id/webpage_refresh_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dip"
            android:layout_toRightOf="@+id/v_v"
            android:background="#223333" >
        </ImageView>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/details_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_below="@+id/title_rl" />

</RelativeLayout>