<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="#eeeeee">
        <include layout="@layout/title"/>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:background="#ffffff"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

   <EditText
       	 android:background="@null"
        android:id="@+id/bankusernamEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
       	android:textColor="#4c4c4c"
       	 android:textSize="13dp"
        android:hint="请填写您的银行账户名称" 
       />

   

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:src="@drawable/enter_arrows" />

</RelativeLayout>
 
 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#ffffff"
    android:paddingLeft="20dp"
 >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
   
        android:layout_height="0.5dp"
      	android:background="#cccccc"
       />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ffffff"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <EditText
       	 android:background="@null"
        android:id="@+id/bankaccountEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
       	android:textColor="#4c4c4c"
       	 android:textSize="13dp"
        android:hint="请填写您的银行账号"
        android:inputType="number"
       />

</RelativeLayout>
 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#ffffff"
    android:paddingLeft="20dp"
 >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
     
        android:layout_height="0.5dp"
      	android:background="#cccccc"
       />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/choicebanklayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"

    android:background="#ffffff"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <TextView
        android:id="@+id/choicebankEdittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
       	android:textColor="#4c4c4c"
       	 android:textSize="13dp"
        android:text="请选择银行地址" 
       />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
      	android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/arrows" />

</RelativeLayout>
 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#ffffff"
    android:paddingLeft="20dp"
 >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
      	android:background="#cccccc"
       />
    </RelativeLayout>
<RelativeLayout
        android:id="@+id/regionlayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"

    android:background="#ffffff"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <TextView
       	 android:background="@null"
        android:id="@+id/banknameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
       	android:textColor="#4c4c4c"
       	 android:textSize="13dp"
        android:hint="请填写支行名称" 
       />



</RelativeLayout>
 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#ffffff"
    android:paddingLeft="20dp"
 >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="0.5dp"
      	android:background="#cccccc"
       />
    </RelativeLayout>

 <RelativeLayout
     android:id="@+id/choicemainlayout"
     android:layout_width="240dp"
     android:layout_height="115dp"
     android:layout_gravity="center_horizontal"
     android:layout_marginBottom="15dp"
     android:layout_marginTop="15dp"
     android:background="@drawable/identity_uploading" >

     <TextView
         android:id="@+id/maintextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="15dp"
         android:text="上传身份证的正面" />

 </RelativeLayout>
 <RelativeLayout
     android:id="@+id/choiceoppositelayout"
 android:layout_width="240dp"
         android:layout_height="115dp"
     android:layout_gravity="center_horizontal"
     android:layout_marginBottom="15dp"
     android:layout_marginTop="15dp"
     android:background="@drawable/identity_uploading" >

     <TextView
         android:id="@+id/oppositetextView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="15dp"
         android:text="上传身份证的反面" />

 </RelativeLayout>
   <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
             	android:layout_marginLeft="20dp"
             	android:layout_marginRight="20dp"
                android:background="@drawable/btnstylered"
                android:gravity="center"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="18dp" />
            </LinearLayout>
        </ScrollView>

</LinearLayout>