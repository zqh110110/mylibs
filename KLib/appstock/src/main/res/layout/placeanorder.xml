<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/mainbg"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
               <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
               android:layout_marginTop="5dp"
          >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="股票代码"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/wait" 
                 android:layout_weight="0.4"
                 android:textColor="@color/white"
                 android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignRight="@+id/linearLayout1"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
       >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="可用资金"
                   android:layout_weight="1"
                 android:textColor="@color/white"
                 android:textSize="@dimen/text_size_15"  />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/wait"
                   android:layout_weight="0.4"
                 android:textColor="@color/white"
                 android:textSize="@dimen/text_size_15"  />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout2"
                android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="参考股价" 
                 android:textColor="@color/white"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/wait"
                 android:textColor="@color/white" 
                    android:layout_weight="0.4"
                    android:textSize="@dimen/text_size_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout3"
            android:layout_alignRight="@+id/linearLayout3"
            android:layout_below="@+id/linearLayout3"
                android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="单次最大建仓" 
                 android:textColor="@color/white" 
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.4"
                android:text="@string/wait"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout4"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout4"
            
                android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="成交类型" 
                  android:textColor="@color/white" 
                  android:layout_weight="1"
                  android:textSize="@dimen/text_size_15"/>

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
         
         
                android:orientation="horizontal"
                 android:layout_weight="0.4" >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="实时"
                     android:textColor="@color/white"
                     android:textSize="@dimen/text_size_15"  />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="委托"
                     android:textColor="@color/white"
                     android:textSize="@dimen/text_size_15"  />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout5"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout5"
               android:layout_marginTop="5dp"
             >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="建仓股数(股)"
                  android:layout_weight="1"
                 android:textColor="@color/white" 
                 android:textSize="@dimen/text_size_15" 
                 />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/gray_white" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout6"
            android:layout_alignRight="@+id/linearLayout6"
            android:layout_below="@+id/linearLayout6"
               android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="建仓价格" 
                android:layout_weight="1"
                 android:textColor="@color/white"
android:textSize="@dimen/text_size_15"/>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                
                android:layout_weight="0.4"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="@color/gray_white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout7"
            android:layout_alignRight="@+id/linearLayout7"
            android:layout_below="@+id/linearLayout7"
              android:layout_marginTop="5dp"
           >

            <TextView
                android:id="@+id/textView12"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="止损价"
                android:layout_weight="1"
                 android:textColor="@color/white" 
                 android:textSize="@dimen/text_size_15" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:ems="10" 
                android:inputType="numberDecimal"
                android:textColor="@color/gray_white">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout8"
            android:layout_alignRight="@+id/linearLayout8"
            android:layout_below="@+id/linearLayout8"
                android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView13"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="止盈价" 
                 android:layout_weight="1"
                 android:textColor="@color/white"
                 android:textSize="@dimen/text_size_15" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="@color/gray_white" />
        </LinearLayout>

     <!--    <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout9"
            android:layout_alignRight="@+id/linearLayout9"
            android:layout_below="@+id/linearLayout9"
                android:layout_marginTop="5dp"
         >

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="股票名称"
                 android:textColor="@color/black"  />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout> -->

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/linearLayout9"
            android:layout_alignRight="@+id/linearLayout9"
            android:layout_below="@+id/linearLayout9"
             android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView16"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="股票名称  " 
                   android:layout_weight="1"
                 android:textColor="@color/white" 
                 android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout11"
                android:layout_below="@+id/linearLayout11"
                android:text="@string/wait"
                 android:textColor="@color/white"
              android:textSize="@dimen/text_size_15"
                    android:layout_weight="0.4"  />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout11"
            android:layout_alignRight="@+id/linearLayout11"
            android:layout_below="@+id/linearLayout11"
                android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="建仓费         " 
                 android:textColor="@color/white"
                    android:layout_weight="1" 
                    android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="按0.25%比例收取（建仓价x股数x0.25%）"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout12"
            android:layout_alignRight="@+id/linearLayout12"
            android:layout_below="@+id/linearLayout12" 
                android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="热门手续费"
                 android:textColor="@color/white" 
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/wait" 
                 android:textColor="@color/white"
              android:textSize="@dimen/text_size_15"
                    android:layout_weight="0.4"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout13"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linearLayout13"
                android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView21"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="高涨跌幅费"
                 android:textColor="@color/white" 
                    android:layout_weight="1" 
                    android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/wait" 
                 android:textColor="@color/white" 
                android:textSize="@dimen/text_size_15"
                    android:layout_weight="0.4"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout14"
            android:layout_alignRight="@+id/linearLayout14"
            android:layout_below="@+id/linearLayout14"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:text="买  涨" 
                android:textColor="#3e4960"
                android:textSize="@dimen/text_size_15"
                android:background="@drawable/loginbg_regsi"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:text="买  跌"
                android:textColor="#3e4960"
                android:textSize="@dimen/text_size_15"
                 android:background="@drawable/loginbg_regsi" />

        </RelativeLayout>
    </RelativeLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>