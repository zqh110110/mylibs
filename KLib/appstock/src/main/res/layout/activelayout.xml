<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#b12a31" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_back" />

        <ProgressBar
            android:id="@+id/titleProgress"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/search"
            android:visibility="gone" />

        <Button
            android:id="@+id/refresh"
            style="@style/bottomtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bottombutton"
            android:text="刷新"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <RelativeLayout
                android:id="@+id/rlgold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/tvgold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="正在进行"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/ivgold"
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:layout_alignLeft="@+id/tvgold"
                    android:layout_alignRight="@+id/tvgold"
                    android:layout_below="@+id/tvgold"
                    android:layout_marginTop="2dip"
                    android:background="#ffffff" />
            </RelativeLayout>

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/rlsliver"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/tvsliver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="已经结束"
                    android:textColor="#eebbbf"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/ivsliver"
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:layout_alignLeft="@+id/tvsliver"
                    android:layout_alignRight="@+id/tvsliver"
                    android:layout_below="@+id/tvsliver"
                    android:layout_marginTop="2dip"
                    android:background="#ffffff"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/goldcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/slivercontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone" >
    </FrameLayout>

</LinearLayout>